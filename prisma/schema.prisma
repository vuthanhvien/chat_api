generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String
  password  String
  createdAt DateTime   @default(now())
  UserRoom  UserRoom[]
}

model Message {
  id        String     @id @default(uuid())
  content   String
  type      String
  senderId  String
  createdAt DateTime   @default(now())
  roomId    String
  UserRoom  UserRoom[]
}

model Room {
  id          String   @id @default(uuid())
  name        String
  avatar      String?
  description String?
  ownerId     String
  createdAt   DateTime @default(now())
  userId      String?

  UserRoom UserRoom[]
}

model UserRoom {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  roomId        String
  lastMessage   Message?  @relation(fields: [lastmessageId], references: [id])
  lastmessageId String?
  lastReadAt    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  Room          Room      @relation(fields: [roomId], references: [id])
}
